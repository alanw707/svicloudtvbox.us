{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        { "slug": "background", "color": "#0B0F1A", "name": "Background" },
        { "slug": "surface",    "color": "#111525", "name": "Surface" },
        { "slug": "primary",    "color": "#0B5FFF", "name": "Primary" },
        { "slug": "accent",     "color": "#00E5FF", "name": "Accent" },
        { "slug": "magenta",    "color": "#FF2D95", "name": "Magenta" },
        { "slug": "text",       "color": "#EAF2FF", "name": "Text" },
        { "slug": "muted",      "color": "#9AA7C2", "name": "Muted" }
      ],
      "gradients": [
        { "slug": "primary-accent", "name": "Primary â†’ Accent", "gradient": "linear-gradient(135deg,#0B5FFF 0%,#00E5FF 100%)" },
        { "slug": "magenta-purple", "name": "Magenta Glow", "gradient": "linear-gradient(135deg,#FF2D95 0%,#7A5CFF 100%)" }
      ]
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1200px"
    },
    "spacing": {
      "units": ["px", "em", "rem", "%", "vh", "vw"],
      "blockGap": "1.25rem"
    },
    "typography": {
      "fluid": true,
      "fontFamilies": [
        { "slug": "inter", "name": "Inter", "fontFamily": "Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif" },
        { "slug": "noto-sans-sc", "name": "Noto Sans SC", "fontFamily": "'Noto Sans SC', 'Noto Sans', system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif" }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.6"
    },
    "elements": {
      "link": {
        "color": { "text": "var(--wp--preset--color--accent)" }
      }
    },
    "blocks": {
      "core/button": {
        "border": { "radius": "999px" }
      },
      "core/navigation": {
        "typography": { "fontWeight": "600" }
      }
    }
  },
  "customTemplates": [],
  "templateParts": [
    { "name": "header", "title": "Header", "area": "header" },
    { "name": "footer", "title": "Footer", "area": "footer" }
  ]
}

